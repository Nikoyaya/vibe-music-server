<configuration>
    <!-- 控制台输出 - 美化版 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-23date{yyyy-MM-dd HH:mm:ss.SSS} | %highlight(%-5level) | %cyan(%-15thread) | %magenta(%-30logger{36}) | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 设置根日志级别为INFO -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- 特定包日志级别配置 -->
    <logger name="org.amis.vibemusicserver.utils" level="ERROR" />
</configuration>